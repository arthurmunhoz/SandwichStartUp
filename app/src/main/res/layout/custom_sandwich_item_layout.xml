<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/custom_button_background"
    android:padding="16dp"
    android:elevation="12dp"
    >

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="X-COSTELA"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        />


    <ImageView
        android:id="@+id/item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/item_name"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:id="@+id/item_ingredients_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_image"
        android:layout_toEndOf="@+id/item_image"
        android:layout_marginStart="16dp"
        android:text="@string/item_ingredients"
        android:textStyle="bold"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/item_ingredients_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_ingredients_title"
        android:layout_toEndOf="@+id/item_image"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignStart="@+id/item_image"
        android:layout_below="@+id/item_image"
        android:text="R$ 22,00"
        android:textAlignment="center"
        android:textStyle="bold"
        />

</RelativeLayout>